<Window x:Class="TestEnvironment.DialogueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEnvironment"
        mc:Ignorable="d"
        Title="DialogueWindow" Width="751.39" Background="#FF3498DB" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style x:Key="QuestionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="white"/>
            <Setter Property="Margin" Value="10,10,8,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="#FF3498DB"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="auto"/>

        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Questions:" HorizontalAlignment="Right" Margin="0,10,10,0" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="-0.246,0.586" Width="100" HorizontalContentAlignment="Right" FontSize="16" FontFamily="Segoe UI Semibold" Foreground="White"/>
        <Label x:Name="label_Copy" Content="Answer:" HorizontalAlignment="Right" Margin="0,10,10,0" Grid.Row="3" VerticalAlignment="Top" RenderTransformOrigin="-0.246,0.586" Width="100" HorizontalContentAlignment="Right" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="16"/>
        <Grid Background="#2980b9" Margin="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image x:Name="imageProfilePicture" HorizontalAlignment="Left" Height="100" Margin="10" Grid.RowSpan="2" Width="100" Source="Resources/profileDefaultPlaceholder.jpg"/>
            <Grid Grid.Column="2" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Margin="10,0" x:Name="FillReport" Content="Fill Report" BorderBrush="{x:Null}" Background="White" Padding="10,8" Foreground="#FF3498DB" FontSize="14" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="3" Grid.Column="0" Margin="10,0" x:Name="NextGoal" Content="Next Goal" BorderBrush="{x:Null}" Background="White" Padding="10,8" Foreground="#FF3498DB" FontSize="14" HorizontalContentAlignment="Center" VerticalAlignment="Center" Click="NextGoal_Click"/>
            </Grid>
            <Label x:Name="lname" Content="John Doe (Co Worker)" Grid.Column="1" Margin="10" VerticalAlignment="Top" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="White"/>
            <TextBlock x:Name="tbSummary" Grid.Column="1" Margin="10,44,10,0" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque in vestibulum quam. Quisque euismod elit at egestas placerat. Nulla aliquet leo quis massa faucibus pretium." VerticalAlignment="Top" Height="66" TextAlignment="Justify" Foreground="White" FontFamily="Segoe UI Light" FontSize="14" Padding="5,0,5,5"/>
        </Grid>
        <StackPanel x:Name="questionStackPanel" Grid.Column="1" Margin="10,5,10,15" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="1" Background="#FF2980B9" x:Name="tbAnswer" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Justify" Foreground="White" FontFamily="Segoe UI Light" FontSize="16" Padding="10" Canvas.Left="10" Canvas.Top="10"/>
        <Label x:Name="lGoal" Content="Goal:" HorizontalAlignment="Right" Margin="10,10,10,10" Grid.Row="1" VerticalAlignment="Center" RenderTransformOrigin="-0.246,0.586" Width="100" HorizontalContentAlignment="Right" FontSize="16" FontFamily="Segoe UI Semibold" Foreground="White"/>
        <TextBlock x:Name="tbGoal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  Margin="10,10,10,10" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." TextAlignment="Justify" Foreground="White" FontFamily="Segoe UI Light" FontSize="16" Padding="5,0,5,5" VerticalAlignment="Center"/>
        <ScrollViewer Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="10,10,10,10">
            <TextBlock x:Name="logger" TextWrapping="Wrap" Text="" TextAlignment="Justify" Foreground="White" FontFamily="Segoe UI Light" FontSize="16" Padding="5,0,5,5" Background="#FF2980B9" ScrollViewer.VerticalScrollBarVisibility="Auto"/>    
        </ScrollViewer>
        
    </Grid>
</Window>
