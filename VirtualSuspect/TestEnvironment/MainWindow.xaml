<Window x:Class="TestEnvironment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEnvironment"
        mc:Ignorable="d"
        Title="MainWindow" Width="675" MinWidth="675" Background="#FF3498DB" MaxWidth="675" ResizeMode="CanMinimize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*" />
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="suspectsPanel" Margin="10,10,10,10" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Suspect Selection" Margin="0" FontFamily="Segoe UI Black" FontSize="20" Foreground="White" Grid.ColumnSpan="2"/>
        <Label x:Name="label1" Content="Select one of the suspects below to interview and discover the real story!" Margin="0" Grid.Row="1" FontFamily="Segoe UI Light" FontSize="14" Foreground="White" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
