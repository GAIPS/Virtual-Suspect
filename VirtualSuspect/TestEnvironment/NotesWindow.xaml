<Window x:Class="TestEnvironment.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEnvironment"
        mc:Ignorable="d"
        Title="NotesWindow" Width="620" Background="#FF3498DB" WindowStartupLocation="CenterOwner" Height="510">
    <Grid>
        <StackPanel Margin="10">
            <Label x:Name="label" Content="Police Notebook" Margin="0" FontFamily="Segoe UI Black" FontSize="20" Foreground="White"/>
            <Label x:Name="label1" Content="These notes are the information available during the interview." Margin="0" Grid.Row="1" FontFamily="Segoe UI Light" FontSize="14" Foreground="White"/>
            <Label x:Name="label_Copy" Content="Notes:" FontFamily="Segoe UI Semibold" FontSize="16" Foreground="White" Background="#FF2980B9"/>
            <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0" Grid.Row="3" Background="#FF2980B9">
                <StackPanel x:Name="spNotes" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </ScrollViewer>
        </StackPanel>










    </Grid>
</Window>
